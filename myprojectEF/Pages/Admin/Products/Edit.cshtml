@page
@model myprojectEF.Pages.Admin.Products.EditModel
@{
}



<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Edit Product</h2>

        @if (Model.errorMessage.Length > 0)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>@Model.errorMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>

        }
        else if (Model.successMessage.Length > 0)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>@Model.successMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form method="post" enctype="multipart/form-data">
            <div class="row m-3">
                <label class="col-sm-4 col-form-label">ID</label>
                <div class="col-sm-8">
                    <input readonly class="form-control-plaintext" value="@Model.Product.Id">
                </div>
            </div>


            <div class="row m-3">
                <label class="col-sm-4 col-form-label">Nom</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ProductDto.Nom">
                    <span asp-validation-for="ProductDto.Nom" class="text-danger"></span>
                </div>
            </div>

            <div class="row m-3">
                <label class="col-sm-4 col-form-label">Brand</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ProductDto.Brand">
                    <span asp-validation-for="ProductDto.Brand" class="text-danger"></span>
                </div>
            </div>

            <div class="row m-3">
                <label class="col-sm-4 col-form-label">Categorie</label>
                <div class="col-sm-8">
                    <select class="form-select" asp-for="ProductDto.Categorie">
                        <option value="other">Other</option>
                        <option value="Spray">Spray</option>
                        <option value="Cap">Cap</option>
                        <option value="Acrylic Marker">Acrylic Marker</option>
                        <option value="Bold Marker">Bold Marker</option>
                        <option value="Empty Marker">Empty Marker</option>
                        <option value="Sketchliner">Sketchliner</option>
                    </select>
                </div>
            </div>

            <div class="row m-3">
                <label class="col-sm-4 col-form-label">Prix</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ProductDto.Prix">
                    <span asp-validation-for="ProductDto.Prix" class="text-danger"></span>
                </div>
            </div>

            <div class="row m-3">
                <label class="col-sm-4 col-form-label">Description</label>
                <div class="col-sm-8">
                    <textarea class="form-control" asp-for="ProductDto.Description"></textarea>
                    <span asp-validation-for="ProductDto.Description" class="text-danger"></span>
                </div>
            </div>

            <div class="row m-3">
                <label class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <img src="/products/@Model.Product.ImageFileName" width="150" />
                </div>
            </div>

            <div class="row m-3">
                <label class="col-sm-4 col-form-label">Image</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ProductDto.ImageFile">
                    <span asp-validation-for="ProductDto.ImageFile" class="text-danger"></span>
                </div>
            </div>

            <div class="row m-3">
                <label class="col-sm-4 col-form-label">Created at </label>
                <div class="col-sm-8">
                    <input readonly class="form-control-plaintext" value="@Model.Product.CreatedAt.ToString("MM/dd/yyyyy")">
                </div>
            </div>

            <div class="row m-3">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" href="/Admin/Products/Index" role="button">Cancel</a>
                </div>
            </div>
        </form>

    </div>
</div>